{
  "cmake.configureArgs": [
    "-DVCPKG_APPLOCAL_DEPS=ON",
    "-DX_VCPKG_APPLOCAL_DEPS_INSTALL=ON",
    "-DVCPKG_TARGET_TRIPLET=x64-linux",
    "-DVCPKG_MANIFEST_MODE=ON"
  ],
  "vcpkg.general.enable": true,
  "vcpkg.target.hostTriplet": "x64-linux",
  // use x64-linx / arm64-osx
  "vcpkg.target.defaultTriplet": "x64-linux",
  "vcpkg.target.useStaticLib": false,
  "cmake.configureSettings": {
    "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
  },
  "cmake.debugConfig": {
    "cwd": "${workspaceFolder}"
  },
  "vcpkg.target.installDependencies": true,
  "vcpkg.target.preferSystemLibs": false,
  "vcpkg.target.useManifest": true,
  "files.associations": {
    ".babelrc": "javascript",
    ".huskyrc": "json",
    ".lintstagedrc": "json",
    "*.json": "json",
    ".env.production.local": "env",
    ".env.development.local": "env",
    ".versionrc": "json",
    "iostream": "cpp",
    "__bit_reference": "cpp",
